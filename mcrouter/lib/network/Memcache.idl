namespace facebook::memcache;

import "mcrouter/lib/network/Common.idl"

request McGetRequest {
  id: 1;
  name: "get";
  reply: McGetReply;

  1: Keys<IOBuf> key;
  2: uint64_t flags;
};

reply McGetReply {
  1: Result result;
  2: Optional<IOBuf> value;
  3: uint64_t flags;
  4: string message;
  5: int16_t appSpecificErrorCode;
};

